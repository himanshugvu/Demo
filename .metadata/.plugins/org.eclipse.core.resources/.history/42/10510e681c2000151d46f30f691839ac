public class Main {

	public static int getResult(String num, int mul){
		
		int number=Integer.parseInt(num);
		int sum =calculate(number);
		sum*=mul;
		while(sum >10){
			sum=calculate(sum);
		}
		return sum;
	}
	
	public static int calculate(int number){
		int sum=0;
		while(number>0){
			sum+=number%10;
			number/=10;
		}
		return sum;
	}
	
